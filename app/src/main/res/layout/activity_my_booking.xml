<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.MyBookingActivity">

        <ScrollView
            android:id="@+id/booking_mainpage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/booking_mainpage_backgroundpic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/national_museum_line_picture"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/booking_mainpage_choose_date"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#09080040"
                    android:gravity="center"
                    android:text="选择日期"
                    android:textColor="#111111"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/booking_mainpage_backgroundpic"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    app:layout_constraintTop_toBottomOf="@id/booking_mainpage_choose_date">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/booking_mainpage_guideline_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.05109489" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/booking_mainpage_guideline_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.25" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/booking_mainpage_guideline_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.4" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/booking_mainpage_guideline_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.6" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/booking_mainpage_guideline_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.75" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/booking_mainpage_guideline_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.95" />


                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/booking_mainpage_choose_time_text"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="#09080040"
                    android:gravity="center"
                    android:text="选择时间"
                    android:textColor="#111111"
                    android:textSize="14sp"
                    app:layout_constraintTop_toBottomOf="@id/booking_mainpage_choose_date"
                    android:layout_marginTop="100dp"/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@id/booking_mainpage_choose_time_text"
                    android:padding="15dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/booking_time_selected_1"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/booking_time_selector_background"
                        android:textColor="@drawable/booking_time_selector_textcolor"
                        android:text="@string/booking_selected_time_1" />

                    <RadioButton
                        android:id="@+id/booking_time_selected_2"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/booking_time_selector_background"
                        android:textColor="@drawable/booking_time_selector_textcolor"
                        android:text="@string/booking_selected_time_2" />

                    <RadioButton
                        android:id="@+id/booking_time_selected_3"
                        android:layout_width="wrap_content"
                        android:layout_height="23dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:button="@null"
                        android:background="@drawable/booking_time_selector_background"
                        android:textColor="@drawable/booking_time_selector_textcolor"
                        android:text="@string/booking_selected_time_3" />

                </RadioGroup>
























            </androidx.constraintlayout.widget.ConstraintLayout>









        </ScrollView>








    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>